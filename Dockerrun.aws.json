{
  "AWSEBDockerrunVersion": 2,
  "ContainerDefinitions": [
    {
      "name": "client",
      "image": "rklemo/multi-client",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "server",
      "image": "rklemo/multi-server",
      "hostname": "api",
      "essential": false,
      "memory": 128
    },
    {
      "name": "worker",
      "image": "rklemo/multi-worker",
      "hostname": "worker",
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "rklemo/multi-nginx",
      "essential": true,
      "portMappings": [
        { 
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["client", "server"],
      "memory": 128,
      "dependsOn": [
        {
            "containerName": "client",
            "condition": "START"
        },
        {
          "containerName": "server",
          "condition": "START"
        }
      ]
    }
  ]
}